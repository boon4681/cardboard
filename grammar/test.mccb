lexer String {
    lexer Quoted {
        text -> ignore;
        text = "[\\\']+" "hi";
        escape = '\\\\[tbrn\'\"\\\\]';
        close = "'" -> pop;
    }

    lexer DoubleQuoted {
        text = "[\\\"]+";
        escape = '\\\\[tbrn\'\"\\\\]';
        double_quoted_close = '"' -> pop;
    }

    @if("'"){
        open = "'" -> push(Quoted);
    }

    double_quoted_open = "'" -> push(Quoted);
}
